{
    "name": "its-webhosting/umich-oidc-login",
    "description": "WordPress plugin that restricts access to the whole site or only certain parts based on OpenID Connect (OIDC) login and group membership information.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Regents of the University of Michigan"
        }
    ],
    "scripts": {
	    "lint": [
		    "./vendor/bin/phpcs --config-set installed_paths $(pwd)/vendor-bin/wpcs/vendor/wp-coding-standards/wpcs/",
		    "./vendor/bin/phpcs --standard=WordPress *.php includes"
	    ]
    },
    "require": {
        "jumbojett/openid-connect-php": "^0.9.10",
        "wp-user-manager/wp-optionskit": "^1.1"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "composer/installers": true
        }
    }
}
